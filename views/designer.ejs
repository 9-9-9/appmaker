<% layout('layout') -%>
<script>
  requirejs(["designer"]);
</script>

<% include components %>

<div class="tip">
	To get started, add a new component.
</div>
<div class="container clearfix">
	<button class="btn-std btn-md publish">Publish</button>
	<div class="tray">
		<div class="component-header clearfix">
			<h5 class="left">Components</h5>
			<div class="library-list clearfix">

			</div>
		</div>
	</div>
	<div class="phone-container">
		<div class="phone-top"></div>
		<div class="phone-canvas">

		</div>
		<div class="phone-bottom"></div>
	</div>
	<div class="cards">
		<div class="clearfix">
			<h5 class="left">Cards</h5>
			<button class="btn-add"></button>
		</div>
		<div class="card"></div>
	</div>
	<div class="console">
		<div class="log">
			<div class="inner">
				<h5>Log</h5>
				<p class="scroll"></p>
			</div>
		</div>
		<div id="inspector" class="hidden">
			<div class="inner">
				<h5>Listens on</h5>
				<div id="inputChannel" class="input" belongsTo=""><span class="icon-headphones"></span></div>
				<h5>Speaks on</h5>
				<div id="outputChannel" class="output" belongsTo=""><span class="icon-feed"></div>
			</div>
		</div>
	</div>
</div>
<div class="tooltip" id="tooltip-output"><span class="txt-fixed">Passes on </span>Images, Videos, Text</div>
<div class="tooltip" id="tooltip-input"><span class="txt-fixed">Listens for </span>Images, Videos, Text</div>
<div class="modal-wrapper color-modal">
	<div class="modal">
		<div class="close-modal"></div>
		<div class="inner">
			<div class="color-options clearfix"></div>
		</div>
	</div>
</div>
<div class="modal-wrapper library">
	<div class="modal">
		<div class="close-modal"></div>
		<div class="inner">
			<h3 class="mar-bot-twenty">Pick components to add to your app</h3>
			<div class="clearfix mar-bot-twenty">
				<div class="filter active">Recommended</div><div class="filter">Popular</div><div class="filter">Newest</div><div class="filter">All</div>
			</div>
			<button class="btn-std btn-done">Done</button>
		</div>
	</div>
</div>
